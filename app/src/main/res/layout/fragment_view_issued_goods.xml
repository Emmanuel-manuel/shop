<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewIssuedGoodsFragment"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“¤ ISSUED GOODS"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/primary"
                        android:gravity="start"/>

                    <!-- Date Filter Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDateFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="ðŸ“… Today"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_calendar"
                        app:iconSize="16dp"
                        app:iconPadding="4dp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View and manage issued stock"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    android:background="@color/primary"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Search and Filter Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Search Issued Goods"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:iconifiedByDefault="false"
                    app:searchHintIcon="@null"
                    app:queryHint="Search by product, assignee, or station..."
                    android:focusable="true"
                    app:closeIcon="@drawable/ic_baseline_clear_24"
                    app:searchIcon="@drawable/ic_baseline_search_24"
                    android:background="@drawable/searchview_bg"/>

                <!-- Statistics Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTotalIssued"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total: 0 items"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:background="@color/on_surface_variant"
                        android:alpha="0.3"/>

                    <TextView
                        android:id="@+id/txtTotalQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Qty: 0 pieces"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:background="@color/on_surface_variant"
                        android:alpha="0.3"/>

                    <TextView
                        android:id="@+id/txtDateRange"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Today"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Issued Goods List Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- List Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@color/secondary_container"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Product &amp; Assignee"
                        android:textSize="13sp"
                        android:textColor="@color/on_secondary_container"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quantity"
                        android:textSize="13sp"
                        android:textColor="@color/on_secondary_container"
                        android:textStyle="bold"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/goodsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:padding="8dp"
                    android:clipToPadding="false"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:layout_marginBottom="16dp"
                        app:tint="@color/on_surface_variant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No issued goods found"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/txtEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue goods to get started"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Refresh Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_popup_sync"
            app:backgroundTint="@color/primary"
            app:tint="@color/white"
            app:elevation="8dp"/>
    </LinearLayout>
</FrameLayout>