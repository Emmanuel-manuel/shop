<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/product_item_bg">

        <!-- First Row: Product Name and Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/productNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/secondary" />

                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete"
                    android:layout_marginStart="4dp"
                    app:tint="@color/error" />



            </LinearLayout>

        </LinearLayout>

        <!-- Second Row: Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Weight -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_weight"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/productWeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500g"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>

            </LinearLayout>

            <!-- Flavour -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_flavour"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/productFlavourText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vanilla"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Third Row: Price and Timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_price"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/secondary" />

                <TextView
                    android:id="@+id/productPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KES 500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"/>

            </LinearLayout>

            <!-- Timestamp -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="2dp"
                    app:tint="@color/light_gray" />

                <TextView
                    android:id="@+id/productTimestampText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="12sp"
                    android:textColor="@color/light_gray"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Extended Details (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/extraDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <!-- Product ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: "
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/productIdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#001"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Last Updated -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: "
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/lastUpdatedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Expand/Collapse Button -->
        <ImageView
            android:id="@+id/expandButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:contentDescription="Expand"
            app:tint="@color/gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>