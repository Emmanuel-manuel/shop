<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IssueGoodsFragment">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Issue Goods"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Issue Goods to Assignees"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerAssignee"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:entries="@array/product_assignee"
                    />

                <!-- Product Selection and Balance in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spinnerProduct"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:entries="@array/product_array"/>

                    <EditText
                        android:id="@+id/txtProductBal"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Balance"
                        android:inputType="number"
                        android:enabled="false"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txtProductName"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="8dp"
                    android:hint="Enter Product Name"
                    android:inputType="text"/>

                <Spinner
                    android:id="@+id/spinnerWeight"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/weight_array"/>

                <Spinner
                    android:id="@+id/spinnerFlavour"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:entries="@array/flavour_array"/>

                <!-- Quantity Input and Real-time Balance Update -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/txtQty"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter Quantity"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:id="@+id/txtUpdatedBalance"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="New Balance"
                        android:inputType="number"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/txtStation"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="8dp"
                    android:hint="Enter Station Issued"
                    android:inputType="text"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/saveButton"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_bg"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:id="@+id/editButton"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/edit_button_bg"
                    android:backgroundTint="@color/green"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>
</FrameLayout>