<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IssueGoodsFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸšš ISSUE GOODS"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribute goods to assignees"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"
                        android:layout_marginTop="8px"/>

                    <View
                        android:layout_width="100dp"
                        android:layout_height="3dp"
                        android:background="@color/primary"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Issue Goods to Assignees"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_surface"/>
                    </LinearLayout>

                    <!-- Assignee Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assignee"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <Spinner
                            android:id="@+id/spinnerAssignee"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/edittext_bg"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>
                    </LinearLayout>

                    <!-- Product Selection with Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Details"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Product Spinner -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:layout_marginBottom="4dp"/>

                                <Spinner
                                    android:id="@+id/spinnerProduct"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:background="@drawable/edittext_bg"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"/>
                            </LinearLayout>

                            <!-- Current Balance -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current Balance"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:id="@+id/txtProductBal"
                                    android:layout_width="120dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/edittext_bg_disabled"
                                    android:hint="0"
                                    android:inputType="number"
                                    android:enabled="false"
                                    android:textColor="@color/on_surface"
                                    android:gravity="center"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- OR Divider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/on_surface_variant"
                            android:alpha="0.3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface_variant"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/on_surface_variant"
                            android:alpha="0.3"/>
                    </LinearLayout>

                    <!-- New Product Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Product Name"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/txtProductName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Enter new product name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:background="@drawable/edittext_bg"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>
                    </LinearLayout>

                    <!-- Product Attributes Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Weight -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textSize="14sp"
                                android:textColor="@color/on_surface"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"/>

                            <Spinner
                                android:id="@+id/spinnerWeight"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edittext_bg"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"/>
                        </LinearLayout>

                        <!-- Flavour -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flavour"
                                android:textSize="14sp"
                                android:textColor="@color/on_surface"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"/>

                            <Spinner
                                android:id="@+id/spinnerFlavour"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/edittext_bg"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Quantity with Real-time Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity to Issue"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold"
                            android:layout_marginBottom="8px"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Quantity Input -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantity"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:layout_marginBottom="4dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/edittext_bg"
                                    android:gravity="center_vertical"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp">

                                    <EditText
                                        android:id="@+id/txtQty"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:hint="Enter quantity"
                                        android:inputType="numberDecimal"
                                        android:background="@null"
                                        android:maxLines="1"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="units"
                                        android:textSize="14sp"
                                        android:textColor="@color/on_surface_variant"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- New Balance -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New Balance"
                                    android:textSize="12sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:id="@+id/txtUpdatedBalance"
                                    android:layout_width="120dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/edittext_bg_disabled"
                                    android:hint="0"
                                    android:gravity="center"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Station -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Station Issued To"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/txtStation"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="Enter station name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:background="@drawable/edittext_bg"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Submit Button -->
                        <Button
                            android:id="@+id/saveButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="âœ… SUBMIT ISSUANCE"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:background="@drawable/button_bg"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"/>

                        <!-- Edit Button -->
                        <Button
                            android:id="@+id/editButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="âœï¸ EDIT ISSUANCE"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:background="@drawable/edit_button_bg"
                            android:gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* New balance updates automatically based on quantity entered"
                        android:textSize="12sp"
                        android:textColor="@color/on_surface_variant"
                        android:gravity="center"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/secondary_container"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/on_secondary_container" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Real-time Tracking"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/on_secondary_container"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance updates automatically as you enter quantity"
                            android:textSize="13sp"
                            android:textColor="@color/on_secondary_container"
                            android:layout_marginTop="4px"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>